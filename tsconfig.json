{
  "compilerOptions": {
    "outDir": "./dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "target": "es5",
    "allowJs": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true
  },
  "include": ["./src/"],
  "exclude": [
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.js"
  ]
}